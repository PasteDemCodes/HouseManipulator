<Window x:Class="testtest.Radio"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:testtest"
        mc:Ignorable="d"
        Title="Radio" Height="525" Width="300">
    <Grid x:Name="Radio_Grid">
        <Grid.Background>
            <ImageBrush ImageSource="radio_app.png"/>
        </Grid.Background>
        <MediaElement x:Name="mPlayer" HorizontalAlignment="Left" Height="100" Margin="343,135,-151,0" VerticalAlignment="Top" Width="100" Volume="1" SpeedRatio="1" Stretch="None" LoadedBehavior="Manual" Source="Sympathique.mp3" Position="0:0:25"/>
        <Slider x:Name="mSlider" HorizontalAlignment="Left" Margin="38,278,0,0" VerticalAlignment="Top" Width="210" Maximum="100" SmallChange="1" Value="50"/>

    </Grid>
</Window>
